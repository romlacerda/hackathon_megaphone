<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<%= simple_nested_form_for(@occurrence) do |f| %>
			  <%= f.error_notification %>

			  <div class="form-inputs">
			    <%= f.input :data_begin %>
			    <%= f.input :status %>
			    <%= f.input :description %>
				<%= f.association :user  %>
				<%= f.input :latitude %>
				<%= f.input :longitude %>
			  </div>
			  <div id="votes">
				<%= f.fields_for :votes do |v| %>
					<%= v.input :vote, :as => :radio_buttons %>
					<%= v.link_to_remove "Remove this vote" %>
				<% end -%>
				</div>
				<%= f.link_to_add "Add Vote", :votes, :data => { :target => "#votes" } %>
			  <div class="form-actions">
			    <%= f.button :submit %>
			  </div>
			<% end %>
 		</div>
	</div>
</div>