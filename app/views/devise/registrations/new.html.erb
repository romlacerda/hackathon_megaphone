<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<h2>Cadastre-se</h2>
		</div>
		<div class="col-lg-12">
			<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				<%= f.error_notification %>


				<%= f.input :email, required: true, autofocus: true, label: "E-mail:" %>
				<%= f.input :password, required: true, hint: ("#{@minimum_password_length} seis caracteres no minimo" if @minimum_password_length), label: "Senha:" %>
				<%= f.input :password_confirmation, required: true, label: 'Confirme sua senha' %>



				<%= f.button :submit, "Enviar", :class=> "btn btn-primary" %>

			<% end %>

		<%= render "devise/shared/links" %>
		</div>
	</div>
</div>