<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<h2>Bem-vindo ao Megaphone Online</h2>
		</div>

		<div class="col-lg-6"> 
			<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			    <%= f.input :email, required: false, autofocus: true, :label => "E-mail:" %>
			    <%= f.input :password, required: false, :label => "Senha:"  %>
			    
			    <%= f.button :submit, "Entrar", :class => "btn btn-primary btn-block" %>
			<% end %>
		</div>

		<div class="col-lg-6">
			<%- resource_class.omniauth_providers.each do |provider| %>
			    <%= link_to omniauth_authorize_path(resource_name, provider), :class=> "btn btn-block fb" do %>
			    	<%= image_tag "fb.png" %>
			    	<%= "Entrar com #{OmniAuth::Utils.camelize(provider)}"%>
			    <% end -%>
			<% end -%>
			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>